<h1>団体登録</h1>

<% if @group.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @group, url: groups_path do |f| %>
  <div class="field">
    <%= f.label :group_name, "団体名" %><br/>
    <%= f.text_field :group_name, value: @group.group_name, autofocus: true, autocomplete: "group_name" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>

<% end %>

